 #include <DallasTemperature.h>//include library DallasTemperature

#include <OneWire.h>// include library OneWire

#define ONE_WIRE_BUS 2
OneWire oneWire(ONE_WIRE_BUS);
DallasTemperature sensors(&oneWire);


const int hotparameter = 40; //just for testing purposes
const int coldparameter = 20; //just set for testingpurposes 
void setup() {
pinMode(2, INPUT); //digit pin for assigned to the sensor
pinMode(4, OUTPUT); //blueled
pinMode(8, OUTPUT); //greenled
pinMode(12, OUTPUT); //redled
Serial.begin(9600);
}

void loop() {

sensors.requestTemperatures();
Serial.print(" The Current Temperature is: ");


Serial.print(sensors.getTempCByIndex(0));
if (sensors.getTempCByIndex(0) < coldparameter) { //condition for cold
digitalWrite(4, HIGH);
digitalWrite(8, LOW);
digitalWrite(12, LOW);
Serial.println(" the water is cold ");
}
else if (sensors.getTempCByIndex(0) >= hotparameter) { //condition for hot
digitalWrite(4, LOW);
digitalWrite(8, LOW);
digitalWrite(12, HIGH);
Serial.println(" the water is hot.");
}
else if ( sensors.getTempCByIndex(0) >coldparameter && sensors.getTempCByIndex(0)< hotparameter){ //fine
digitalWrite(4, LOW);
digitalWrite(8, HIGH);
digitalWrite(12, LOW);
Serial.println(" the water is of room temperature");
}
delay(10);
}
